    </div>
  </div>
</div>
<!-- About End -->

<!-- Promotions Start -->
<div class="container-xxl py-5">
  <div class="container">
    <div class="row g-0 gx-5 align-items-end">
      <div class="col-lg-6">
        <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s">
          <h1 class="display-5 mb-3">Special Offers</h1>
          <p>Discover our exclusive deals and promotions for the best movie experience.</p>
        </div>
      </div>
    </div>
    <div class="row g-4">
      <% promotions.forEach((promo, index) => { %>
        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="<%= 0.1 + index * 0.2 %>s">
          <div class="promotion-item bg-white rounded overflow-hidden">
            <div class="position-relative overflow-hidden">
              <img class="img-fluid w-100 golden-ratio" src="<%= promo.image %>" alt="<%= promo.title %>">
              <div class="bg-white rounded position-absolute bottom-0 start-0 m-4 py-2 px-4">
                <h4 class="text-primary mb-0"><%= promo.title %></h4>
              </div>
            </div>
            <div class="p-4">
              <p class="h5 text-body mb-4"><%= promo.description %></p>
              <a class="btn btn-divider rounded-pill py-2 px-4" href="/promotions/<%= promo.id %>">Learn More</a>
            </div>
        </div>
      </div>
      <% }); %>
  </div>
</div>
</div>
<!-- Promotions End -->

<!-- Product Start -->
<div class="container-xxl py-5">
  <div class="container">
    <div class="row g-0 gx-5 align-items-end">
      <div class="col-lg-6">
        <div
                class="section-header text-start mb-5 wow fadeInUp"
                data-wow-delay="0.1s"
                style="max-width: 500px"
        >
          <h1 class="display-5 mb-3">Now Showing</h1>
          <p>
            Discover the latest blockbusters and indie gems. Book your
            tickets now and experience the magic of cinema.
          </p>
        </div>
      </div>
      <div
              class="col-lg-6 text-start text-lg-end wow slideInRight"
              data-wow-delay="0.1s"
      >
        <ul class="nav nav-pills d-inline-flex justify-content-end mb-5">
          <% tabs.forEach((tab, index) => { %>
            <li class="nav-item me-2">
              <a
                      class="btn btn-outline-divider border-2 <%= index === 0 ? 'active' : '' %>"
                      data-bs-toggle="pill"
                      href="#tab-<%= index + 1 %>"
              ><%= tab.name %></a
              >
            </li>
          <% }); %>
        </ul>
      </div>
    </div>
    <div class="tab-content">
      <% tabs.forEach((tab, tabIndex) => { %>
        <div id="tab-<%= tabIndex + 1 %>" class="tab-pane fade show p-0 <%= tabIndex === 0 ? 'active' : '' %>">
          <div class="row g-4">
            <% tab.movies.forEach((movie, movieIndex) => { %>
              <div
                      class="col-xl-3 col-lg-4 col-md-6 <%= tabIndex === 0 ? 'wow fadeInUp' : '' %>"
                      <% if(tabIndex === 0) { %>data-wow-delay="<%= 0.1 + movieIndex * 0.2 %>s"<% } %>
              >
                <div class="product-item">
                  <div class="position-relative bg-light overflow-hidden">
                    <img
                            class="img-fluid w-100 golden-ratio-v"
                            src="<%= movie.image_url %>"
                            alt="<%= movie.title %>"
                    />
                    <div
                            class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3"
                    >
                      <%= movie.tag %>
                    </div>
                  </div>
                  <div class="text-center p-4">
                    <a class="h5 mb-2 text-clamp-1" href="/movies/<%= movie.id %>"><%= movie.title %></a>
                    <p class="text-clamp">
                      <%= movie.description %>
                    </p>
                  </div>
                  <div class="d-flex border-top">
                    <small class="w-50 text-center border-end py-2">
                      <a class="text-body" href="/movies/<%= movie.id %>"
                      ><i class="fa fa-eye text-primary me-2"></i>View
                        detail</a
                      >
                    </small>
                    <small class="w-50 text-center py-2">
                      
                      <a class="text-body add-cart-item" data-id="<%= movie.id %>" href="javascript:void(0)"
                      ><i class="fa fa-shopping-bag text-primary me-2"></i>Add
                        to cart</a
                      >
                    </small>
                  </div>
                </div>
              </div>
            <% }); %>

            <div class="col-12 text-center <%= tabIndex === 0 ? 'wow fadeInUp' : '' %>"
                 <% if(tabIndex === 0) { %>data-wow-delay="0.1s"<% } %>
            >
              <a class="btn btn-divider rounded-pill py-3 px-5" href="/movies"
              >Browse More Movies</a
              >
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>
<!-- Product End -->

