<!-- Product Start -->
<div class="container-xxl py-5">
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6">
                    <img class="card-img-top mb-5 mb-md-0" src="<%= movie.image_url %>" alt="<%= movie.title %> Poster" />
                </div>
                <div class="col-md-6">
                    <div class="small mb-1">ID: <%= movie.id %></div>
                    <h1 class="display-5 fw-bolder"><%= movie.title %></h1>
                    <div class="fs-5 mb-5">
                        <span class="text-decoration-line-through">$<%= movie.price %></span>
                        <span>$12</span>
                    </div>
                    <p class="lead">
                        <%= movie.description %>
                    </p>
                    <div class="d-flex">
                        <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                        <button class="btn btn-outline-light flex-shrink-0" type="button">
                            <i class="bi-cart-fill me-1"></i>
                            Add to cart
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Related items section-->
    <section class="py-5 bg-light">
        <div class="container px-4 px-lg-5 mt-5">
            <h2 class="fw-bolder mb-4 text-dark">Movies that you need to watch</h2>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <% relatedMovies.forEach(movie => { %>
                    <div class="col mb-5">
                        <div class="card h-100">
                            <% if (movie.onSale) { %>
                                <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <% } %>
                            <!-- Product image-->
                            <img class="card-img-top golden-ratio-v" src="<%= movie.image_url %>" alt="<%= movie.title %>" />
                            <img class="card-img-top golden-ratio-v" src="<%= movie.image_url %>" alt="<%= movie.title %>" />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <a href="/detail/<%= movie.id %>">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder text-dark"><%= movie.title %></h5>
                                        <!-- Product reviews-->
                                        <div class="d-flex justify-content-center small text-warning mb-2">
                                            <% for(let i = 0; i < movie.rating; i++) { %>
                                                <div class="bi-star-fill"></div>
                                            <% } %>
                                        </div>
                                        <!-- Product price-->
                                        <% if (movie.price) { %>
                                            <span class="text-muted text-decoration-line-through">$<%= movie.price + movie.price * 0.2 %></span>
                                        <% } %>
                                        $<%= movie.price %>
                                    </div>
                                </a>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto" href="/detail/<%= movie.id %>">
                                        <%= movie.inCart ? 'View options' : 'Add to cart' %>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>
    </section>
</div>
<!-- Product End -->

